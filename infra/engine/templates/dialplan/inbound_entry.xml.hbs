<include>
  <extension name="{{inbound.name}}_{{inbound.priority}}">
    <condition field="destination_number" expression="^{{inbound.didOrUri}}$">
      {{#if inbound.callerIdNumber}}
      <action application="set" data="caller_id_number={{inbound.callerIdNumber}}" />
      {{/if}}
      {{#if inbound.networkAddr}}
      <action application="set" data="network_addr={{inbound.networkAddr}}" />
      {{/if}}
      <action application="set" data="organization_id={{organizationId}}" />
      <action application="set" data="inbound_name={{inbound.name}}" />
      {{#if inbound.targetFlowId}}
      <action application="transfer" data="7000 XML default" />
      {{else}}
      <action application="playback" data="ivr/8000/ivr-no_matching_results.wav" />
      <action application="hangup" />
      {{/if}}
    </condition>
  </extension>
</include>

